<%= form_tag instruments_path, method: :get, class: "form-inline search-form" do %>
  <div class="form-group">
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find an instrument"
    %>
  </div>

  <div class="form-group">
    <%= text_field_tag :location,
      params[:location],
      class: "form-control address-input",
      placeholder: "Where are you at?",
      required: true
    %>
  </div>
  <%= button_tag "Search", type: "submit", class: "button-pink" %>
<% end %>
