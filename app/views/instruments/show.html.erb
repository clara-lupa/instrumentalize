<div class="container">
  <h1>Instrument Details</h1>
    <% if @instrument.photo.attached? %>
      <%= cl_image_tag @instrument.photo.key, height: 150, width: 150, crop: :fill %>
    <% end %>
  <h2><%= @instrument.name %></h2>
  <p><%= @instrument.description %></p>
  <p>price per day: <%= @instrument.price_per_day %>â‚¬</p>
  <p>owner: <%= @instrument.user.email %></p>
  <% if current_user == @instrument.user %>
    <%= link_to "edit this instrument", edit_instrument_path(@instrument), class:'button-pink' %>
  <% else %>
    <%= link_to "rent this instrument", new_instrument_rental_path(@instrument), class:'button-pink' %>
  <% end %>
  <%= link_to "all instruments", instruments_path, class:'button-pink' %>
</div>

